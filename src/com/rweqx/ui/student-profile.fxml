<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="root" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.rweqx.controller.StudentProfileController">
   <children>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="5.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <HBox>
               <children>
                  <Button fx:id="bBack" mnemonicParsing="false" onAction="#backClicked" text="Back" />
               </children>
            </HBox>
            <Label fx:id="lName" styleClass="viewing-label" stylesheets="@../styles/style.css" text="NAME" />
            <ScrollPane fx:id="eventScroll" hbarPolicy="NEVER" VBox.vgrow="ALWAYS">
               <content>
                  <VBox fx:id="eventBox" prefHeight="200.0" prefWidth="100.0" />
               </content>
            </ScrollPane>
            <BorderPane>
               <left>
                  <Button fx:id="bShowAll" mnemonicParsing="false" onAction="#showAllClicked" text="Show All" BorderPane.alignment="CENTER" />
               </left>
               <right>
                  <Button fx:id="bShowMonth" mnemonicParsing="false" onAction="#showMonthClicked" text="Last Month" BorderPane.alignment="CENTER" />
               </right>
               <center>
                  <Label fx:id="lOutstanding" text="Amount Outstanding" BorderPane.alignment="CENTER" />
               </center>
            </BorderPane>
         </children>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
